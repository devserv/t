<?xml version="1.0" encoding="utf-8"?><!-- android:background="?attr/colorPrimaryDark" -->
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_bg_b"
    android:minHeight="@dimen/drawer_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/profile_image_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/status_bar_height"
        android:paddingTop="@dimen/status_bar_height"
        android:weightSum="2">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginLeft="@dimen/drawer_padding"
            android:layout_marginStart="@dimen/drawer_padding"
            android:layout_marginTop="@dimen/drawer_padding"
            android:layout_weight="0"
            android:src="@drawable/ic_launcher"
         />
        <!--
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/app_name"
            android:textSize="40sp" />
        -->
    </LinearLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/enable_disable_switch"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/profile_image_holder"
        android:padding="@dimen/drawer_padding"
        android:text="aaa"
      />

</RelativeLayout>